{% extends 'base.html.twig' %}

{% block title %}contact - Rambaud Labrosse{% endblock %}

{% block body %}
    <!-- WELCOME -->
    <section class="py-10 py-md-14 overlay overlay-black overlay-60 bg-cover" style="background-image: url(assets/img/covers/cover-5.jpg);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 text-center">

                    <!-- Heading -->
                    <h1 class="display-2 fw-bold text-white">
                        Nous contacter
                    </h1>


                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </section>

    <!-- SHAPE -->
    <div class="position-relative">
        <div class="shape shape-bottom shape-fluid-x text-light">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"/></svg>      </div>
    </div>

    <!-- INFO -->
    <section class="py-7 py-md-9 border-bottom border-gray-300" id="info">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">

                    <!-- Button -->
                    <a href="#info" class="btn btn-white btn-rounded-circle shadow mt-n11 mt-md-n13" data-scroll>
                        <i class="fe fe-arrow-down"></i>
                    </a>

                </div>
            </div> <!-- / .row -->
            <div class="row">
                <div class="col-12 col-md-4 text-center border-end border-gray-300">
                    <!-- Heading -->
                    <h6 class="text-uppercase text-gray-700 mb-1">
                        Message
                    </h6>

                    <!-- Link -->
                    <div class="mb-5 mb-md-0">
                        <a href="#!" class="h4 text-primary">
                            chat!
                        </a>
                    </div>

                </div>
                <div class="col-12 col-md-4 text-center border-end border-gray-300">

                    <!-- Heading -->
                    <h6 class="text-uppercase text-gray-700 mb-1">
                        appel
                    </h6>

                    <!-- Link -->
                    <div class="mb-5 mb-md-0">
                        <a href="#!" class="h4">
                            (+33) 123-4567
                        </a>
                    </div>

                </div>
                <div class="col-12 col-md-4 text-center">

                    <!-- Heading -->
                    <h6 class="text-uppercase text-gray-700 mb-1">
                        Email
                    </h6>

                    <!-- Link -->
                    <a href="#!" class="h4">
                        email@rambaud-labrosse.com
                    </a>

                </div>
            </div> <!-- / .row -->
        </div>
    </section>

    <!-- FORM -->
    <section class="pt-8 pt-md-11 pb-8 pb-md-14">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 text-center">

                    <!-- Heading -->
                    <h2 class="fw-bold">

                    </h2>

                    <!-- Text -->
                    <p class="fs-lg text-muted mb-7 mb-md-9">
                    </p>

                </div>
            </div> <!-- / .row -->
            <div class="row justify-content-center">
                <div class="col-12 col-md-12 col-lg-10">

                    <!-- Form -->
                    {{ form_start(form) }}
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-5 ">
                                    <!-- Input -->
                                    {{ form_row(form.prenom) }}

                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-5 ">
                                    <!-- Input -->
                                    {{ form_row(form.nom) }}

                                </div>
                            </div>
                        </div> <!-- / .row -->
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-5 ">
                                    <!-- Input -->
                                    {{ form_row(form.email) }}

                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group mb-5 ">
                                    <!-- Input -->
                                    {{ form_row(form.telephone) }}

                                </div>
                            </div>
                        </div> <!-- / .row -->
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-7 mb-md-9">

                                    {{ form_row(form.content) }}
                                </div>
                            </div>
                        </div> <!-- / .row -->
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-7 mb-md-9">

                                    {{ form_row(form.file) }}
                                </div>
                            </div>
                        </div> <!-- / .row -->

                    </form>
                    {{ form_end(form) }}

                </div>
            </div> <!-- / .row -->
        </div> <!-- / .container -->
    </section>
{% endblock %}
